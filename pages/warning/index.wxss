
page{
  background: #F0F4F7;
}
.content{
  margin-top: 66px;
  padding-top: 44px;
}
.tabTop{
  box-sizing: border-box;
  width: 100%;
  height: 44px;
  background: #FFF;
  position: fixed;
  top: 66px;
  left: 0;
}

.scoll-h{
  height: 100%;
}
.tab-h{
  box-sizing: border-box;
  width: 100%;
  height: 44px;
  overflow: hidden;
}
.tab-item{
  display: inline-block;
  width: 25%;
  height: 44px;
  line-height: 44px;
  color: #333;
  font-size: 12px;
  text-align: center;
}
.tab-item.active{
  color: #1A5FC4;
}
.scoll-h{
  box-sizing: border-box;
  width: 100%;
}
.information{
  margin-top: 10px;
  box-sizing: border-box;
  background: #FFF;
}
.information .con{
  box-sizing: border-box;
  padding: 0 16px;
}
.information .con .row{
  box-sizing: border-box;
  position: relative;
  height: 160rpx;
  border-bottom: 1px solid #F2F2F2;
}
.information .con .row .logo{
  box-sizing: border-box;
  width: max-content;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}
.information .con .row .logo icon{
  font-size: 40rpx;
  color: #2b8ec8;
}
.information .con .row .state{
  box-sizing: border-box;
  width: max-content;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  text-align: center;
  font-size: 12px;
  color: #C8AB34;
}
.information .con .row .state.active{
  color: red;
}
.information .con .row .state icon{
  display: block;
  font-size: 40rpx;
}
.information .con .row .text{
  padding: 40rpx 120rpx 0 70rpx;
}
.information .con .row .text .name{
  font-size: 12px;
  color: #101010;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.information .con .row .text .time{
  margin-top: 20rpx;
  font-size: 10px;
  color: #ABABAB;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}