/* modelTest.wxss */
@import '../../model/model.wxss';

page {
  background: #f0f4f7;
}

.page {
  width: 100%;
  height: 100vh;
  background: #f0f4f7;
  display: flex;
  flex-direction: column;
}
.page .all-box{
  flex: 1;
  overflow-y: scroll;
}
.page .content {
  box-sizing: border-box;
  background: #fff;
  padding: 15rpx 32rpx;
  padding-bottom: 90rpx;
}

.row {
  box-sizing: border-box;
  width: 100%;
  height: 88rpx;
  border-bottom: 2rpx solid #f2f2f2;
  position: relative;
}

.row.active {
  height: auto;
  padding-bottom: 20rpx;
}

.row .label {
  box-sizing: border-box;
  width: 30%;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #101010;
}

.row .label.mustFill::before {
  content: '*';
  display: inline-block;
  color: red;
}

.row .label span {
  color: red;
  font-size: 20rpx;
}

.row .main {
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  padding-left: 30%;
  width: 100%;
  height: 88rpx;
}

.row.active .main {
  padding: 0;
  box-sizing: border-box;
  position: unset;
  width: 100%;
  height: auto;
}

.row.active .main textarea {
  width: 100%;
  height: 200rpx;
  position: unset;
  line-height: 30rpx;
}

.row.active .main .textarea {
  width: 100%;
  height: 200rpx;
  position: unset;
  line-height: 30rpx;
}

.row.active .main .textarea span {
  color: #808080;
}

.row .main picker {
  width: 100%;
  height: 88rpx;
}

.row .main .picker {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #101010;
  position: relative;
}

.row .main .picker .fb-type {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}

.row .main .picker .fb-type .type-label {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}

.row .main input {
  width: 100%;
  height: 100%;
  line-height: 99rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #101010;
  position: relative;
}

.row .main .infoText {
  width: 100%;
  height: 100%;
  line-height: 88rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #101010;
  position: relative;
  margin: 0;
  text-align: left;
}

.row .main .radio-group {
  line-height: 88rpx;
}

.row.upload, .row.contact {
  box-sizing: border-box;
  width: 100%;
  height: auto;
  position: relative;
}

.row.upload .label, .row.contact .label {
  box-sizing: border-box;
  width: 100%;
  line-height: 88rpx;
  font-size: 24rpx;
  color: #101010;
}

.row.upload .main, .row.contact .main {
  box-sizing: border-box;
  position: unset;
  width: 100%;
  height: auto;
  padding: 0;
  padding-top: 20rpx;
}

.row.upload .main .images {
  box-sizing: border-box;
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid #bfbfbf;
  border-radius: 8rpx;
  position: relative;
}

.row.upload .main .images image {
  display: block;
  width: 100%;
  height: 100%;
}

.row.upload .main .images span {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: red;
}

.row.upload .main .images icon {
  display: block;
  font-size: 70rpx;
  line-height: 100rpx;
  text-align: center;
}

.fillTip {
  color: red;
}

.upload.fillTip {
  border-color: red;
}

/* 复选框 */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  /* height: 200px; */
  padding: 5px 10px;
}

label.checkbox {
  display: block;
  padding: 10rpx;
  margin: 10rpx 0;
}

.butt {
  width: 47%;
  line-height: 60rpx;
  padding: 0;
  font-size: 30rpx;
  /* text-align: center; */
  display: inline-block;
  margin-bottom: 20rpx;
}

.butt:last-of-type {
  color: #1aad19;
  text-align: end;
}

.typeContent {
  display: inline-block;
  color: #000;
  /* line-height: 44px; */
}

input.jine {
  display: inline-block;
  width: 90%;
}

.unit {
  /* display: inline-block; */
  line-height: 88rpx;
  position: absolute;
  top: 0;
  right: 0;
  color: #000;
}

radio {
  transform: scale(0.6);
  margin-right: -6px;
}

.add {
  font-size: 50rpx;
  text-align: center;
  line-height: 80rpx;
}

.contact {
  position: relative;
  /* margin-bottom: 100rpx; */
}

.contact .label {
  box-sizing: border-box;
  width: 30%;
  line-height: 88rpx;
  font-size: 24rpx;
  color: #101010;
}

.contact .main {
  box-sizing: border-box;
  width: 100%;
}

.contact .main .images {
  border: none;
  position: relative;
  box-sizing: border-box;
  float: left;
  width: 88rpx;
  height: 140rpx;
  margin-right: 20rpx;
  text-align: center;
}

.contact .main .images.addBtn image {
  width: 70rpx;
  height: 70rpx;
  padding: 10rpx;
  border: 2rpx solid #bfbfbf;
  border-radius: 8rpx;
}

.deleteImage {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.7);
  border: 7rpx solid rgba(0, 0, 0, 0);
  box-sizing: border-box;
}

.contact .deleteImage {
  width: 28rpx;
  height: 28rpx;
}

.deleteImage>image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
}

.contact .main .images>image {
  width: 88rpx;
  height: 88rpx;
}

.contact .main .images .name {
  text-align: center;
  width: 100%;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

