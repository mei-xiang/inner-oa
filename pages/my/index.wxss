page{
  background: #F0F4F7;
}
.content{
  box-sizing: border-box;
  margin-top: 132rpx;
  padding: 40rpx 0;
}
.upper{
  margin: 0 32rpx;
  background: #FFF;
  height: 280rpx;
  border-radius: 8rpx;
  position: relative;
}
.upper .companyName{
  position: absolute;
  top: 40rpx;
  left: 32rpx;
  font-size: 28rpx;
  color: #ABABAB;
  font-weight: 500;
  letter-spacing: 4rpx;
}
.upper .userName{
  position: absolute;
  bottom: 40rpx;
  left: 32rpx;
  font-size: 36rpx;
  color: #000;
  font-weight: 500;
  letter-spacing: 4rpx;
}
.upper .profile{
  display: block;
  position: absolute;
  top: 40rpx;
  right: 32rpx;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 8rpx;
}
.mid{
  margin-top: 40rpx;
  box-sizing: border-box;
  width: 100%;
  background: #FFf;
  padding-left: 32rpx;
  border-bottom: 2rpx solid #F2F2F2;
  border-top: 2rpx solid #F2F2F2;
}
.mid .row{
  box-sizing: border-box;
  width: 100%;
  border-bottom: 1px solid #F2F2F2;
  height: 88rpx;
  position: relative;
  line-height: 88rpx;
  color: #000;
  font-size: 28rpx;
  font-weight: 500;
}
.mid .row:last-child{
  border-bottom: none;
}

.mid .row  icon{
  font-size: 32rpx;
  color: #2B8EC8;
  margin-right: 16rpx;
}
.mid .row  .icon-details{
  font-size: 48rpx;
  color: #ABABAB;
  float: right;
}
.login{
  margin: 80rpx 64rpx;
  background: #2B8EC8;
  color: #FFF;
  text-align: center;
  box-sizing: border-box;
  height: 88rpx;
  border-radius: 8rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
}
