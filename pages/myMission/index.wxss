/* modelTest.wxss */
@import '../../model/model.wxss';

page{
  background: #F0F4F7;
}
.content{
  margin-top: 76px;
  box-sizing: border-box;
  background: #FFF;
  padding: 0 16px;
}
.information{
  margin-top: 10px;
  box-sizing: border-box;
  background: #FFF;
}

.information .con{
  box-sizing: border-box;
}
.information .con .row{
  box-sizing: border-box;
  position: relative;
  height: 160rpx;
  border-bottom: 1px solid #F2F2F2;
}
.information .con .row .logo{
  box-sizing: border-box;
  width: max-content;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}
.information .con .row .logo icon{
  font-size: 40rpx;
  color: #2b8ec8;
}
.information .con .row .state{
  box-sizing: border-box;
  width: max-content;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}
.information .con .row .state button{
  width: 70px;
  height: 28px;
  border-radius: 2px;
  background-color: rgba(43, 142, 200, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 12px;
  border: none;
  padding-left: 4px;
  padding-right: 4px;
  line-height: 28px;
}
.information .con .row .text{
  padding: 40rpx 120rpx 0 70rpx;
}
.information .con .row .text .name{
  font-size: 12px;
  color: #101010;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.information .con .row .text .time{
  margin-top: 20rpx;
  font-size: 10px;
  color: #ABABAB;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}